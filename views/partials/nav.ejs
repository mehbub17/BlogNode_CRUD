  <div class="container mt-5">
    <div id="error-alert" class="alert alert-danger" role="alert">
      <%= locals.error %>
    </div>
    <script>

      setTimeout(() => {
        const alertElement = document.getElementById('error-alert');
        if (alertElement) {
          alertElement.style.display = 'none';
        }
      }, 5000);
